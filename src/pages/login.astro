---
export const prerender = false;

// Handle login form submission
if (Astro.request.method === 'POST') {
  // In a real app, you would validate credentials here
  // For testing, we'll just set isAuthenticated to true
  if (Astro.session) {
    await Astro.session.set("isAuthenticated", true);
    return Astro.redirect('/page_with_session');
  }
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
      line-height: 1.6;
    }
    .container {
      border-radius: 8px;
      padding: 2rem;
      margin-top: 2rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      background-color: #f3f4f6;
    }
    .button {
      display: inline-block;
      padding: 0.5rem 1rem;
      background-color: #3b82f6;
      color: white;
      text-decoration: none;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      margin-top: 1rem;
    }
    .button:hover {
      background-color: #2563eb;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  </style>
</head>
<body>
  <h1>Login Page</h1>
  
  <div class="container">
    <h2>Testing Login</h2>
    <p>Click the button below to set your session as authenticated:</p>
    
    <form method="POST">
      <button type="submit" class="button">Login (Set isAuthenticated to true)</button>
    </form>
    
    <a href="/" style="display: block; margin-top: 1rem;">Back to Home</a>
  </div>
</body>
</html> 